<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- TEMA-BASE + NoActionBar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- TEMA PARA O NAVIGATION DRAWER -->
    <style name="AppTheme.NoActionBar.NavDrawer">
    </style>
    <!-- TEMAS PARA TOOLBAR, VER include_toolbar.xml -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/primary</item>
        <item name="actionOverflowButtonStyle">@style/DotsDarkTheme</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="DotsDarkTheme" parent="@style/Widget.AppCompat.ActionButton.Overflow" >
        <item name="android:tint">@color/primary</item>
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/primary_text</item>
        <item name="colorControlActivated">@color/primary_text</item>
        <item name="android:textSize">11.5sp</item>
    </style>

    <style name="AlertStyle" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/mint_cream</item>
    </style>

</resources>
